<UserControl x:Class="CatalogoProductos.Views.ProductoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:CatalogoProductos.ViewModels"
             xmlns:p="clr-namespace:CatalogoProductos.Properties"
             mc:Ignorable="d" 
             Background="White" d:DesignHeight="400" d:DesignWidth="700">
    <UserControl.DataContext>
        <vm:ProductoViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"></ColumnDefinition>
            <ColumnDefinition Width="420"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            <DataGrid AutoGenerateColumns="False" MaxColumnWidth="75" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" />
                    <DataGridTextColumn Header="Category Id" Binding="{Binding CategoryId}" />
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{x:Static p:Resources.BotonProductos}" FontSize="36" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="ID" FontWeight="SemiBold" Margin="0,0,0,50" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                <TextBox Grid.Column="0" Height="20" Width="75" Margin="10" Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"></TextBox>

                <TextBlock Grid.Column="1" Text="Nombre" FontWeight="SemiBold" Margin="0,0,0,50" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                <TextBox Grid.Column="1" Height="20" Width="75" Margin="10" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"></TextBox>

                <TextBlock Grid.Column="2" Text="Descripción" FontWeight="SemiBold" Margin="0,0,0,50" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                <TextBox Grid.Column="2" Height="20" Width="75" Margin="10" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"></TextBox>

                <TextBlock Grid.Column="3" Text="Precio" FontWeight="SemiBold" Margin="0,0,0,50" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                <TextBox Grid.Column="3" Height="20" Width="75" Margin="10" Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"></TextBox>

            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Button Grid.ColumnSpan="2" Grid.Row="0" Content="Añadir Producto" FontSize="18" Height="50" Width="150" Command="{Binding AddProductCommand}"></Button>
                <Button Grid.Column="0" Grid.Row="1" Content="Modificar Producto" Height="30" Width="120"></Button>
                <Button Grid.Column="1" Grid.Row="1" Content="Eliminar Producto" Height="30" Width="120"></Button>

            </Grid>
        </Grid>
    </Grid>
    
</UserControl>
